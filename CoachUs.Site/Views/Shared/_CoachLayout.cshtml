<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
    <body>
        <div class="contentWrapper mainWrapper">
            <nav id="mainMenu">
                <div class="wrapper">
                    @Html.Partial("~/Views/Menu/MainMenu.cshtml")
                </div>
            </nav>
            <header>
                <div class="menu">
                    @Html.Partial("~/Views/Menu/UserMenu.cshtml")
                </div>
                <h2 class="siteTitle">@ViewBag.Title</h2>
            </header>
            <nav id="breadCumb">
                @Html.Partial("~/Views/Menu/Breadcrumb.cshtml")
            </nav>
            <article>
                @RenderBody()
            </article>
            <footer>
                &copy;Coach-Us @DateTime.Now.Year
            </footer>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
